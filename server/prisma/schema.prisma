generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}
model Booking {
  id          String   @id @default(uuid())
  userId      String
  showId      String
  amount      Int
  isPaid      Boolean  @default(false)
  paymentLink String?
  createdAt   DateTime @default(now())

  seats       BookingSeat[]
}

model BookingSeat {
  id        String @id @default(uuid())
  bookingId String
  showId    String
  seatNo    String

  booking   Booking @relation(fields: [bookingId], references: [id])

  @@unique([showId, seatNo])
}
